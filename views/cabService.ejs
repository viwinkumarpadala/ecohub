    <script>
        function documentValiation() {
            let flag = true
            // phone number
            var number = document.getElementById("phone").value;
            var rePhoneNumber = /^\(?(\d{3})\)?[- ]?(\d{3})[- ]?(\d{4})$/;
            if (!rePhoneNumber.test(number)) {
                flag = false;
                window.alert("Phone number format invalid, try again");
            }
            if (flag == true) {
                console.log("Your request to contact sales manager has been approved.")
                window.open("/cab-service-success");
            }
        }
    </script>

